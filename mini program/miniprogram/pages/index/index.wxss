.my-swiper image {
    width: 100%;
}

.my-slide {
    position: relative;
}

.slide-caption {
    position: absolute;
    right: 5%;
    left: 5%;
    z-index: 10;
    color: #fff;
    text-align: center;
    text-shadow: 12px 7px 6px rgba(0, 0, 0, .7)
}


.cloud-tags-style {
    margin: 0 auto;
    width: 80%;
}

swiper {
    padding-top: 30px;
}

.le-img {
    width: 100%;
    display: block;
    transform: scale(0.8);
    transition: all 0.5s ease;
    border-radius: 6px;
}

.le-img.le-active {
    transform: scale(1);
}

.top {
    width: 100%;
    background-color: #f7f7f7;
}

.topsearch {
    width: 90%;
    margin-left: 4%;
    display: flex;
    padding: 2% 0;
    align-items: center;
}

.frame {
    background-color: white;
    width: 70%;
    border-radius: 20rpx;
    padding: 0 3%;
    margin: 0 auto
}

.frame > input {
    margin: 6rpx 0;
    height: 32rpx;
    font-size: 28rpx;
}

.topsearch > text {
    width: 10%;
    margin-left: 5%;
    color: #a8a7a7fa;
    font-size: 25rpx;
}

.history {
    background-color: white;
    padding: 4%;
    font-size: 25rpx;
}

.history_title {
    font-size: 1em;
    display: flex;
    justify-content: space-between;
    color: #a8a7a7fa;
    align-items: center;
}

.history_text {
    padding: 4% 0;
    display: flex;
    flex-wrap: wrap;
}

.history_text > text {
    background-color: #f7f7f7;
    padding: 1% 3%;
    margin: 2%;
    border-radius: 40px;
    font-size: 25rpx;
}

.history_text > text:first-child {
    margin-left: 0;
}

.my-tag {
    padding: 1% 3%;
    margin: 2%;
    border-radius: 40px;
    font-size: 1.1em;
    color: white;
    z-index: 10;
    box-shadow: 12px 5px 10px rgba(0, 0, 0, .1)
}
