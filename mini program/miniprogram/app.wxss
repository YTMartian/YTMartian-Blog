    line-height: 1.1;
    font-weight: 300;
    color: #8f8f8f;
    text-overflow: -o-ellipsis-lastline;
    overflow: hidden;
    text-overflow: ellipsis;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
}


.post-data {
    display: flex;
    align-items: center;
}

.post-data > image {
