    overflow: hidden;
    text-overflow: ellipsis;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
}

.post-content {
    height: 50rpx;
    margin-top: 0rpx;
}

.post-content > text {
